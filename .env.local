# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://propchain:dev_password_123@localhost:5432/propchain_dev

# Redis Configuration
REDIS_URL=redis://:dev_redis_123@localhost:6379

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_very_long_and_secure_123456789

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# AWS Configuration (LocalStack for development)
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=eu-west-2
S3_BUCKET=propchain-dev-documents
SQS_QUEUE_URL=http://localhost:4566/000000000000/propchain-dev-tasks
SQS_DLQ_URL=http://localhost:4566/000000000000/propchain-dev-dlq

# Email Configuration (Development - uses MailCatcher)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@propchain.local

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf,text/plain

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Session Configuration
SESSION_SECRET=dev_session_secret_key_very_long_and_secure
SESSION_TTL=3600

# Feature Flags
FEATURE_WEBHOOKS=true
FEATURE_ANALYTICS=true
FEATURE_REAL_TIME=true
FEATURE_BACKUP=true

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
REQUIRE_EMAIL_VERIFICATION=false

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
REQUEST_LOGGING=true

# Development Tools
SWAGGER_ENABLED=true
DEBUG_MODE=true
HOT_RELOAD=true