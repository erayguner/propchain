{
  "name": "propchain-api",
  "version": "1.0.0",
  "description": "Property Upkeep Records API - Development Environment",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "dev-simple": "nodemon src/server-simple.js",
    "start": "node src/server.js",
    "start-simple": "node src/server-simple.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:api": "vitest run tests/api",
    "test:integration": "vitest run tests/integration",
    "benchmark": "node scripts/benchmark.js",
    "docs": "swagger-jsdoc -d swaggerDef.js src/routes/*.js -o swagger.json",
    "lint": "eslint src --fix",
    "format": "prettier --write src/**/*.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "aws-sdk": "^2.1491.0",
    "bull": "^4.12.2",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "prom-client": "^13.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "vitest": "^1.0.4",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "@faker-js/faker": "^8.3.1",
    "artillery": "^2.0.3"
  },
  "keywords": [
    "property",
    "maintenance",
    "upkeep",
    "records",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Property Upkeep Records Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}